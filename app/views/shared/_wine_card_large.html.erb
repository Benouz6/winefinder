<%# Temporary grape variety and alcohol level values %>
<% wine.grapes = 'some fancy schmancy grapes' %>
<% wine.alcohol = 14 %>


<div class='d-flex flex-row wine-card-large'>
  <%# title %>
  <div class='d-flex justify-content-center align-items-center title-box' style='width:100%'>
    <h3><%= wine.name %></h3>
  </div>

  <%# image %>
  <div>
    <div class='img-box d-flex justify-content-center align-items-center'>
      <img src=<%= wine.image_url %>  alt="bottle image" >
    </div>
  </div>

  <%# attributes %>
  <div>
    <%# price and rating %>
    <div class='d-flex flex-row' style='width:100%;'>
      <%# Price %>
      <div class='price-box d-flex justify-content-center align-items-center'>
        <p><%= humanized_money_with_symbol(wine.price) %></p>
      </div>
      <%# rating %>
      <div class='d-flex justify-content-center align-items-center flex-grow-1'>
        <% rating = 5.00 * wine.rating / 100 %>
        <% remainder = rating % 1 %>

        <% if remainder < 0.5 %>
          <% rating -= remainder %>
        <% else %>
          <% rating += 1 - remainder %>
        <% end %>

        <% yellow_stars = rating.to_i %>
        <% yellow_stars.times do%>
          <i class="fas fa-star star_yellow"></i>
        <% end %>

        <% grey_stars = 5-rating.to_i %>
        <% grey_stars.times do%>
          <i class="fas fa-star star_grey"></i>
        <% end %>
      </div>
    </div>

    <%# Information %>
    <div class='d-flex flex-column wine-info'>
      <%# color %>
      <div class='d-flex flex-row'>
        <p class='tag'>Color:</p>
        <p class='content'><%= wine.color %></p>
      </div>

      <%# Region %>
      <div class='d-flex flex-row'>
        <p class='tag'>Origin:</p>
        <p class='content'><%= wine.origin %></p>
      </div>

      <%# Grape variety %>
      <div class='d-flex flex-row'>
        <p class='tag'>Grape variety:</p>
        <p class='content'><%= wine.grapes %></p>
      </div>

      <%# Alcohol level %>
      <div class='d-flex flex-row'>
        <p class='tag'>Alcohol level:</p>
        <p class='content'><%= wine.alcohol %></p>
      </div>

      <div class='d-flex flex-row justify-content-between'>
        <p class='tag'>Alcohol level:</p>
        <p class='tag'><%= "TMPkm distance" %></p>  <%# Needs proper variable %>
      </div>
    </div>

    <%# Find bottle CTA %>
    <div class='find-box d-flex align-items-center justify-content-center'>
      <%= link_to('Find bottle', map_path, class: 'btn') %>
    </div>


  </div>




</div>
