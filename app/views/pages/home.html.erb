<div class="banner">
  <div class="container">
    <h1>WineFinder</h1>
    <p id="typer"></p>
    <%= link_to(pages_search_path, class: "btn btn-flat") do %>
      Find Wine
    <% end %>
  </div>
</div>

<h2 class="subtitle fancy"><span>Discover</span></h2>

<div class="cards">
  <div class="card-product">
    <%= image_tag "article_image_1.jpg" %>
    <div class="card-product-infos">
      <h2>Rosé for brunch</h2>
      <p>What is the best time of day to enjoy rosé? We suggest its best to toast with a glass of rosé over brunch...</p>
    </div>
  </div>
<%= link_to(pages_article_path, class:"article-card") do %>
  <div id="card-2" class="card-product">
    <%= image_tag "article_image_2.jpg" %>
      <div class="card-product-infos">
        <h2>The art of pairings</h2>
          <p>When getting ready to sit down for a meal, choosing the right wine can really make your culinary creations shine...</p>
      </div>
  </div>
<% end %>
<div class="homepage-divider"></div>
</div>

<script>
  const app = document.getElementById('typer');

  const typewriter = new Typewriter(app, {
      loop: true,
      delay: 75,
      // cursorClassName: 'type-writer-cursor'
  });

  typewriter.typeString('Let’s find the perfect wine for your occasion.')
      .pauseFor(2500)
      .deleteChars(18)
      .typeString('available at your nearest SAQ.')
      .pauseFor(2500)
      // .deleteChars(7)
      // .typeString('<strong>altered!</strong>')
      // .pauseFor(2500)
      .start();
</script>
