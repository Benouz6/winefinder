<%# Title box %>
<div class='page-title-box'>
  <h1 style='font-size: 24px;'>Tell us a bit more about what you’re looking for</h1>
</div>

<div class='container mt-2'>
  <form action="/recommendations" method="Get" id="form1">
  <div class="form-group">
    <%# Address %>
    <label for="bottle_search">Where is the bottle needed? </label>
    <input  type="search" name='address' class="form-control mb-2" id="bottle_search" placeholder="5333, avenue casgrain, montreal">

    <%# Food type %>
    <label class='mb-1'>What will you have to eat?</label>
    <%= select_tag "food_id", options_from_collection_for_select(Food.all, "id", "name"), include_blank: false, selected: Food.first, class:"form-control mb-2" %>

    <%# budget %>
    <label class='mb-1' for="exampleFormControlSelect2">What's your maximum budget?</label>
    <select id="price" name="price" class="form-control mb-2" id="exampleFormControlSelect2">
      <option>15</option>
      <option>20</option>
      <option>25</option>
      <option>30</option>
      <option>35</option>
      <option>40</option>
      <option>45</option>
      <option>50</option>
    </select>

    <label for="exampleFormControlSelect3">What wine color are you looking for?</label>
    <select id="color" name="color" class="form-control" id="exampleFormControlSelect3">
      <option label="Red" <%= params[:color]=="red" ? "selected" : "" %>>red-wine</option>
      <option label="White" <%= params[:color]=="white" ? "selected" : "" %>>white-wine</option>
      <option label="Rosé" <%= params[:color]=="rose" ? "selected" : "" %>>rose</option>
    </select>

    <%# bottle count %>
    <label class='mb-1' for="exampleFormControlSelect4">How many bottle do you want?</label>
    <select id="quantity" name="quantity" class="form-control mb-2" id="exampleFormControlSelect4">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
      <option>6</option>
      <option>7</option>
      <option>8</option>
      <option>9</option>
    </select>
  </div>
  </form>

  <div class='btn-form'>
    <button class="btn" id="results-button" type="submit" form="form1" value="Search">
      Find Wine
    </button>
  </div>
</div>
